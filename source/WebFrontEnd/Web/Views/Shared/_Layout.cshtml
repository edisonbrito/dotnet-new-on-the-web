    <script language="javascript">
        $(document).ready(function () {
            $('#nav-hexagonal #order').click(function (e) {

                e.preventDefault();

                var actionurl = 'http://grape.westus2.cloudapp.azure.com:8030/api/Orders/Hexagonal';

                var order = new Object();
                order.name = $('#nav-hexagonal #Name').text();
                order.useCases = $('#nav-hexagonal #UseCases')[0].value;
                order.userInterface = $('#nav-hexagonal #IncludeWebApi')[0].value == true ? 'webapi' : 'none';
                order.dataAccess = $('#nav-hexagonal #DataAccess')[0].value;
                order.tips = $('#nav-hexagonal #IncludeDocumentation')[0].value == true;
                order.skipRestore = $('#nav-hexagonal #SkipRestore')[0].value == true;

                $.ajax({
                    url: actionurl,
                    type: 'post',
                    contentType: "application/json; charset=utf-8",
                    dataType: 'application/json',
                    data: JSON.stringify(order),
                    success: function (data) {
                        alert(JSON.stringify(data));
                        window.location.href = "/Tracking/" + data.orderId;
                    },
                    error: function (returnval) {
                        window.location.href = "/Tracking/" + JSON.parse(returnval.responseText).orderId
                    }
                });

                return false;
            });

            $('#nav-clean #order').click(function (e) {

                e.preventDefault();

                var actionurl = 'http://grape.westus2.cloudapp.azure.com:8030/api/Orders/Clean';

                var order = new Object();
                order.name = $('#nav-clean #Name').text();
                order.useCases = $('#nav-clean #UseCases')[0].value;
                order.userInterface = $('#nav-clean #IncludeWebApi')[0].value == true ? 'webapi' : 'none';
                order.dataAccess = $('#nav-clean #DataAccess')[0].value;
                order.tips = $('#nav-clean #IncludeDocumentation')[0].value == true;
                order.skipRestore = $('#nav-clean #SkipRestore')[0].value == true;

                $.ajax({
                    url: actionurl,
                    type: 'post',
                    contentType: "application/json; charset=utf-8",
                    dataType: 'application/json',
                    data: JSON.stringify(order),
                    success: function (data) {
                        window.location.href = "/Tracking/" + order.orderId;
                    },
                    error: function (returnval) {
                        window.location.href = "/Tracking/" + JSON.parse(returnval.responseText).orderId
                    }
                });
            });

            $('#nav-clean #eventsourcing').click(function (e) {

                e.preventDefault();

                var actionurl = 'http://grape.westus2.cloudapp.azure.com:8030/api/Orders/EventSourcing';

                var order = new Object();
                order.name = $('#nav-eventsourcing #Name').text();
                order.useCases = $('#nav-eventsourcing #UseCases')[0].value;
                order.userInterface = $('#nav-eventsourcing #IncludeWebApi')[0].value == true ? 'webapi' : 'none';
                order.dataAccess = $('#nav-eventsourcing #DataAccess')[0].value;
                order.tips = $('#nav-eventsourcing #IncludeDocumentation')[0].value == true;
                order.skipRestore = $('#nav-eventsourcing #SkipRestore')[0].value == true;
                order.serviceBus = $('#nav-eventsourcing #ServiceBus')[0].value == true ? 'kafka' : 'none';

                $.ajax({
                    url: actionurl,
                    type: 'post',
                    contentType: "application/json; charset=utf-8",
                    dataType: 'application/json',
                    data: JSON.stringify(order),
                    success: function (data) {
                        window.location.href = "/Tracking/" + order.orderId;
                    },
                    error: function (returnval) {
                        window.location.href = "/Tracking/" + JSON.parse(returnval.responseText).orderId
                    }
                });
            });

            $('#project-name').keyup(function () {
                $('#nav-hexagonal #Name').text($(this).val());
                $('#nav-clean #Name').text($(this).val());
                $('#nav-eventsourcing #Name').text($(this).val());
            });
        });
    </script>

